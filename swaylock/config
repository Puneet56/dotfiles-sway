# ~/.config/swaylock/config
# Tokyo Night inspired swaylock theme

# Base color (background mask)
color=1a1b26

# Font
font=JetBrains Mono

# Indicator styling
indicator-idle-visible
indicator-radius=80
indicator-thickness=10
indicator-caps-lock
indicator-key-hl-color=7aa2f7
indicator-wrong-color=f7768e
indicator-ver-color=9ece6a
